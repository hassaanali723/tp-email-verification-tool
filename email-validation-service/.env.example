# API Settings
API_KEY=your_32_character_minimum_api_key_here
API_KEY_HEADER=X-API-Key
USER_ID_HEADER=X-User-ID
CLIENT_ID_HEADER=X-Client-ID
ENABLE_AUTH=true

# Validation Settings
DNS_TIMEOUT=10
SMTP_TIMEOUT=5
MAX_CONCURRENT_VALIDATIONS=5

# SMTP Settings
SMTP_PORT=25
SMTP_USE_TLS=false
SMTP_FALLBACK_PORTS=587,465

# Circuit Breaker Settings
SMTP_CIRCUIT_BREAKER_THRESHOLD=10
SMTP_CIRCUIT_BREAKER_TIMEOUT=300
SMTP_ERROR_THRESHOLD_PERCENTAGE=30
DNS_ONLY_MODE_ENABLED=false

# Cache Settings
CACHE_TTL_FULL_RESULT=86400
CACHE_TTL_MX_RECORDS=172800
CACHE_TTL_BLACKLIST=21600
CACHE_TTL_DISPOSABLE=604800
CACHE_TTL_CATCH_ALL=86400
CACHE_KEY_PREFIX=email_validation:

# Cache Control
ENABLE_RESULT_CACHE=true
ENABLE_MX_CACHE=true
ENABLE_BLACKLIST_CACHE=true
ENABLE_DISPOSABLE_CACHE=true
ENABLE_CATCH_ALL_CACHE=true

# RabbitMQ Settings (Required)
RABBITMQ_HOST=your_rabbitmq_host
RABBITMQ_PORT=5672
RABBITMQ_USER=your_rabbitmq_user
RABBITMQ_PASS=your_rabbitmq_password
RABBITMQ_VHOST=/
RABBITMQ_QUEUE=email_validation
RABBITMQ_DLQ=email_validation_dlq

# Redis Settings (Required)
REDIS_HOST=your_redis_host
REDIS_PORT=6379
REDIS_DB=0
REDIS_PASSWORD=your_redis_password
REDIS_RESULT_EXPIRY=3600

# Worker Settings
WORKER_COUNT=3
WORKER_BATCH_SIZE=5
WORKER_PREFETCH_COUNT=1
MAX_RETRIES=3
SMALL_BATCH_THRESHOLD=1
